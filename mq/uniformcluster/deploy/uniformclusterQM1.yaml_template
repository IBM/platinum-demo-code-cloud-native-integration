apiVersion: mq.ibm.com/v1beta1
kind: QueueManager
metadata:
  name: ucqm1
  namespace: $TARGET_NAMESPACE
spec:
  version: 9.3.0.0-r1
  license:
    accept: true
    license: L-RJON-CD3JKX
    use: "NonProduction"
  pki:
    keys:
    - name: default
      secret:
        secretName: uniformclustercert
        items:
          - tls.key
          - tls.crt
  web:
    enabled: false
  queueManager:
    resources:
      requests:
        cpu: 1
      limits:
        cpu: 2
    ini:
      - configMap:
          name: uniformcluster
          items:
            - allqms.ini
      - configMap:
          name: uniformclusterqm1
          items:
            - qm.ini
    mqsc:
      - configMap:
          name: uniformcluster
          items:
            - uniformcluster.mqsc
    availability:
      type: NativeHA
    readinessProbe:
      periodSeconds: 1
      failureThreshold: 5
      timeoutSeconds: 2
  template:
    pod:
      containers:
        - env:
            - name: MQSNOAUT
              value: 'yes'
          name: qmgr
